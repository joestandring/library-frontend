{
  "source": {
    "includePattern": ".+\\.js(doc|x)?$", // Only process .js, .jsdoc, or .jsx files
    "include": ["."], // Check all directories
    "exclude": ["node_modules"] // Skip node_modules
  },
  "recurseDepth": 10, // Only go 10 directories deep
  "opts": {
    "destination": "./docs/jsdocs", // Export to this location
    "recurse": true
  }
}